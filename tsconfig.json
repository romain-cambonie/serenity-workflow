{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}